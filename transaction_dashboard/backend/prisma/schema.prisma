// backend/prisma/schema.prisma
// Esquema adaptado a la base de datos "transacciones"

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// MODELO PRINCIPAL - TRANSACCIONES
// ==========================================

model Transaction {
  id           BigInt    @id @default(autoincrement())
  fechaHora    DateTime  @map("fecha_hora") @db.Timestamp()
  customerId   Int?      @map("customer_id")
  empleadoId   Int?      @map("empleado_id")
  metodoPago   String    @map("metodo_pago")
  total        Decimal   @db.Decimal(12, 2)

  // Índices para optimización de queries del dashboard
  @@index([fechaHora])
  @@index([customerId])
  @@index([metodoPago])
  @@map("transactions")
}